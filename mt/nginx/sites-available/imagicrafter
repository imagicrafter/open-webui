######
# Open WebUI Client: imagicrafter (Local Development)
# Generated by client-manager.sh for local testing
#
# This config allows testing nginx proxy without SSL

server {
    listen 80;
    server_name localhost localhost;

    location / {
        # Proxy to host machine (where Open WebUI container runs)
        proxy_pass http://host.docker.internal:8082;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;

        # Open WebUI specific settings
        proxy_read_timeout 300;
        proxy_connect_timeout 300;
        proxy_send_timeout 300;
    }
}

